\newdimen\@authposht
\newcommand*{\@fctoneauthor}[3][]{%
% #1 = rule length
% #2 = author name
% #3 = author position
  \ifx&#1&%
    % #1 is empty
    \setbox0\hbox{\qquad\@authorsignaturefont#2\qquad}%
    \setbox1\hbox{\qquad\@positionsignaturefont#3\qquad}%
    \ifdim\wd0>\wd1%
      \def\@fctwd{\wd0}%
    \else
      \def\@fctwd{\wd1}%
    \fi
  \else%
    % #1 is nonempty
    \def\@fctwd{#1}
  \fi%
  \qquad%
  \begin{minipage}[t]{\@fctwd}%
    \centering%
    \rule{\@fctwd}{0.5pt}%
    \\[0.5ex]\@fcthookauthor{\@authorsignaturefont#2}%
    \\[0.5ex]{\@positionsignaturefont#3}%
  \end{minipage}%
}


\newcommand*{\fctsignature}[3][]{
  % #1 = rule length
  % #2 = alignment
  % #3 = vertical spacing
  \vspace*{#3}%
  \noindent\begin{minipage}{\linewidth}%
    \baselineskip=\dimexpr#3+#3\relax%
    \if#2l\relax\raggedright\fi%
    \if#2c\relax\centering\fi%
    \if#2r\relax\raggedleft\fi%
    \StrGobbleRight{\@fctauthorposition}{1}[\@fctauthorposition]%
    \@for\myi:=\@fctauthorposition\do{%
      \StrCut{\myi}{,}\@fct@author\@fct@position%
      \@fctoneauthor[#1]{\@fct@author}{\@fct@position}
    }%
  \end{minipage}\par\bigskip%
}
