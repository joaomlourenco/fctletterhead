\newcommand*{\@fctoneauthor}[3][]{%
% #1 = rule length
% #2 = author name
% #3 = author position
  \ifx&#1&%
    % #1 is empty
    \setbox0\hbox{\qquad#2\qquad}%
    \setbox1\hbox{\qquad#3\qquad}%
    \ifdim\wd0>\wd1%
      \def\@fctwd{\wd0}%
    \else
      \def\@fctwd{\wd1}%
    \fi
  \else%
    % #1 is nonempty
    \def\@fctwd{#1}
  \fi%
  \begin{minipage}[t]{\@fctwd}%
    \centering%
    \rule{\@fctwd}{0.5pt}%
    \ifdefined\@fctauthor\@fcthookauthor\\[0.5ex]\@fctauthor\fi%
    \ifdefined\@fctposition\@fcthookposition\\[0.5ex]\@fctposition\fi%
  \end{minipage}%
}

\newcommand*{\fctsignature}[3][]{
  % #1 = rule length
  % #2 = alignment
  % #3 = vertical spacing
  \vspace*{#3}
  \noindent\begin{minipage}{\linewidth}
    \if#2l\relax\raggedright\fi
    \if#2c\relax\centering\fi
    \if#2r\relax\raggedleft\fi
    \@fctoneauthor[#1]{\@fctauthor}{\@fctposition}%
  \end{minipage}\par\bigskip
}
